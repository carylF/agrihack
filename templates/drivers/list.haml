-extends "corporate/private_base.haml"

-set title = "Bus Drivers"

-block content
  -include "modals/bus_driver_create.haml"
  %button.pull-right.btn.btn-success.btn-large(role="button", \
    data-modal="modal")
    %i.icon-plus
    Add bus driver

  %p.lead Drivers

  %table.table.table-striped.table-hover.table-bordered
    %thead: %tr
      %th Name
      %th Driver ID
      %th On Duty
    %tbody
      -for bus_driver in current_account.get_BusDriver()
        %tr
          %td #{bus_driver.name}
          %td #{bus_driver.driver_id}
          %td #{bus_driver.on_duty}
            %a.btn(href="#{uri_for('bus_driver.update', id=bus_driver.key().id())}")
              %i.icon-edit
              Update bus driver
            %a.btn.btn-danger(href="#{uri_for('bus_driver.delete', id=bus_driver.key().id())}")
              %i.icon-trash
              Delete bus driver
      -else
        %tr
          %td(colspan="3")
            No drivers have been added added yet.
